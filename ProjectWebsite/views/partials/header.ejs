        <![endif]-->

        <!--Custom CSS and JS includes-->
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
        <script src="/javascripts/header_code.js"></script>

        <% if (typeof js_includes !== 'undefined') { %>
            <% for(var i=0; i < js_includes.length; i++) { %>
                <script src="<%= js_includes[i] %>"></script>
            <% }%>
        <% }%>

        <!--Creates popup alert for user-->
        <%if(typeof data.message !== "undefined"){%>
        <script>
            window.alert('<%=data.message%>');
        </script>
        <%}%>

        </head>

        <body>
            <div class="container-fluid">

                <header>
                    <p>Easy Business Tracker</p>
                </header>

                <nav>
                    <div id="accessLvl" style="visibility: hidden;"><% if(typeof data.access !== "undefined") {%><%=data.access%><%}%></div>
                    <p class="alert alert-success" role="alert" id="welcome" style="visibility: visible;">
                         <% if(typeof data.first_name !== "undefined") { %>
                        <span class="glyphicon glyphicon-user"></span> Welcome, <%=data.first_name%>!<br />
                        <a href="/logout">Logout</a>
                        <% } else if(typeof login !== "undefined"){ %>
                        You are not logged in.
                        <% } else { %>
                        <span class="glyphicon glyphicon-user"></span> <a href="/login">Login</a>
                        <% } %>
                    </p>

                    <ul class="nav nav-pills nav-stacked">
                        <li role="presentation" id="home_link"><a href="/">Home</a></li>
                        <li role="presentation" id="about_link"><a href="/about">About</a></li>
                        <li role="presentation" id="reports_link" style="visibility: hidden;"><a href="/report">Reports</a></li>
                        <li role="presentation" id="data_entry_link" style="visibility: hidden;"><a href="/dataEntry">Data Entry</a></li>
                        <li role="presentation" id="customers_link" style="visibility: hidden;"><a href="/customer">Customers</a></li>
